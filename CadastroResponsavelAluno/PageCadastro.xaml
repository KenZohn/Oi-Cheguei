<Page x:Class="CadastroResponsavelAluno.PageCadastro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CadastroResponsavelAluno"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCadastro">

    <Page.Resources>
        <!--Some o TextBlock-->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" Background="White" Height="400" CornerRadius="10">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="Seja Bem-Vindo!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                <Label Grid.Row="0" Content="← Voltar" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="14" Margin="12,0,0,0" MouseLeftButtonDown="Label_MouseLeftButtonDown"/>

                <TextBlock Grid.Row="1" Panel.ZIndex="1" Text="Nome" Visibility="{Binding ElementName=areaNome, Path=Text.IsEmpty, Converter={StaticResource BoolToVis} }" Style="{StaticResource TextBlockLogin}"/>
                <TextBox Grid.Row="1" Panel.ZIndex="0" x:Name="areaNome" Style="{StaticResource TextBoxLogin}"/>

                <TextBlock x:Name="labelSenha" Grid.Row="2" Panel.ZIndex="1" Text="Senha" Style="{StaticResource TextBlockLogin}"/>
                <PasswordBox Grid.Row="2" Panel.ZIndex="0" x:Name="areaSenha" Style="{StaticResource PasswordBoxLogin}" PasswordChanged="areaSenha_PasswordChanged"/>

                <TextBlock x:Name="labelRepetirSenha" Grid.Row="3" Panel.ZIndex="1" Text="Repetir Senha" Style="{StaticResource TextBlockLogin}"/>
                <PasswordBox Grid.Row="3" Panel.ZIndex="0" x:Name="areaRepetirSenha" Style="{StaticResource PasswordBoxLogin}" PasswordChanged="areaRepetirSenha_PasswordChanged"/>

                <TextBlock Grid.Row="4" Panel.ZIndex="1" Text="CPF" Visibility="{Binding ElementName=areaCPF, Path=Text.IsEmpty, Converter={StaticResource BoolToVis} }" Style="{StaticResource TextBlockLogin}"/>
                <TextBox Grid.Row="4" Panel.ZIndex="0" x:Name="areaCPF" Style="{StaticResource TextBoxLogin}"/>

                <TextBlock x:Name="labelCargo" Grid.Row="5" Panel.ZIndex="1" Text="Cargo" Style="{StaticResource TextBlockLogin}"/>
                <ComboBox x:Name="areaCargo" Grid.Row="5" Panel.ZIndex="0" Style="{StaticResource ComboBoxLogin}" SelectionChanged="areaCargo_SelectionChanged">
                    <ComboBoxItem Content="Coordenação/Direção"/>
                    <ComboBoxItem Content="Portaria"/>
                    <ComboBoxItem Content="Professor"/>
                </ComboBox>

                <Button Grid.Row="6" Content="Cadastrar" HorizontalAlignment="Center" Height="35" Width="180" Style="{StaticResource EstiloBotao}" Margin="10,10,10,10" Click="Cadastrar_Click"/>
            </Grid>
        </Border>
    </Grid>
</Page>
